{
    "version": "1.0.0-*",
	"packOptions":{
		"summary": "MVPStream - Indice de conocimiento MVP",
		"owners": ["Mat√≠as Quaranta"],
		"projectUrl": "http://github.com/ealsur/mvpstream",
		"licenseUrl": "",
		"repository": {
		  "type": "git",
		  "url": "https://github.com/ealsur/mvpstream"
		},
		"files":{
			"excludeFiles":[
				"bower_components",
				"node_modules"
			]
		}
	},
    "buildOptions": {
        "warningsAsErrors": true,
        "emitEntryPoint": true,
        "preserveCompilationContext": true
    },
    /*https://github.com/aspnet/Announcements/issues/175*/
     "runtimeOptions": {
        "gcServer": false,
        "gcConcurrent": true
    },
    "dependencies": {
        "Microsoft.AspNetCore.Mvc": "1.0.0-rc2-final",
        "Microsoft.AspNetCore.Diagnostics":"1.0.0-rc2-final",
        "Microsoft.AspNetCore.StaticFiles": "1.0.0-rc2-final",
        "Microsoft.AspNetCore.Server.Kestrel": "1.0.0-rc2-final",   
        "MVPStream.Models": "2.0.2",
        "Microsoft.AspNet.WebApi.Client":"5.2.3",
        "Microsoft.Azure.DocumentDB":"1.7.0",
        "Microsoft.Azure.DocumentDB.TransientFaultHandling": "1.2.0",
        "EnterpriseLibrary.TransientFaultHandling": "6.0.1304.0",
        "Newtonsoft.Json": "8.0.3",
        "Microsoft.Azure.Search": "1.1.1",
        "Microsoft.AspNetCore.Server.IISIntegration": "1.0.0-rc2-final"
    },
	"tools": {
	  "Microsoft.AspNetCore.Server.IISIntegration.Tools": {
		"version": "1.0.0-*",
		"imports": "portable-net45+wp80+win8+wpa81+dnxcore50"
	  }
	},
	"scripts": {
	  "postpublish": "dotnet publish-iis --publish-folder %publish:OutputPath% --framework %publish:FullTargetFramework%"
	},
    "publishOptions": {
    "include": [
        "wwwroot",
        "Views",
        "web.config"
        ]
    },
    "frameworks": {
        "net461":{}
    }
}
