@model MVPStream.Models.BusquedaViewModel
@{
    ViewBag.Title = "Todas las publicaciones de los más destacados Microsoft MVP";
}
@section meta{
    <meta name="og:image" content="@Url.Content("~/content/images/logo.png")" />
    <meta name="description" content="Publicaciones de los más destacados Microsoft MVP" />
}
<div class="hero mdl-typography--text-center">
        <h1>Todas las publicaciones de los más destacados Microsoft MVP</h1>
</div>

<div class="container">
    <div class="mdl-grid">
            @foreach (var entry in Model.Publicaciones)
            {
                <div class="mdl-cell mdl-cell--4-col mdl-cell--4-tablet mdl-cell--4-phone">
                    @Html.DisplayFor(model => entry)
                </div>
            }
    </div>
    <div class="clearfix"></div>
    <nav class="paginatewrapper">
            @if (Model.Page > 1)
            {
                 <a href="@Url.Action("Publicaciones", new {  page = Model.Page - 1 })"><button class="mdl-button mdl-js-button mdl-button--raised mdl-button--accent mdl-js-ripple-effect prev paginate">
                Anteriores
            </button></a>
            }
             <a href="@Url.Action("Publicaciones", new {  page = Model.Page + 1 })"><button class="mdl-button mdl-js-button mdl-button--raised mdl-button--accent mdl-js-ripple-effect next paginate">
                Más resultados
            </button></a>
            
    </nav>
    <div class="clearfix"></div>
</div>
